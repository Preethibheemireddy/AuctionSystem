@model Auction.Model.Message.ProductModel
@{
    ViewBag.Title = "MyProduct";
}

<body style="background-color:white; ">


    <div style="
        display:inline;
        position: absolute;
        top: 150px;
        left: 50px;
        width: auto;
        height: auto;
        margin: auto;">

        @if (Model != null)
        {
            @Html.ValidationSummary(true, "Please correct the errors and try again.", new { @class = "text-danger" })
            using (Html.BeginForm("UserBid", "Auction", FormMethod.Post))
            {
              
                double? Bid_price = ViewData["BidPrice"] as double?;
                <table>

                    <tr style="color:black">
                        <td style="width: auto; height: 100px; font:600; font-family: 'Times New Roman', Times, serif; font-size: large">
                            @Html.Label("Product") <br />
                            @Html.DisplayFor(model => model.Product_Name, new { @class = "" }) <br />
                            @Html.HiddenFor(model => model.ProductID, new { @class = "" })

                            @Html.Label("Description") <br />
                            @Html.DisplayFor(model => model.Product_description, new { @class = "" }) <br />

                            @Html.Label("End Date") <br />
                            @Html.DisplayFor(model => model.Product_bid_time, new { @class = "" }) <br />
                            @Html.HiddenFor(model => model.Product_bid_time, new { @class = "" })

                            @Html.Label("Status") <br />
                            @Html.DisplayFor(model => model.Status, new { @class = "" }) <br />

                            @if (Model.CurrentHighestBid == 0)
                            {
                                @Html.Label("Min Bid Price")                                <br />
                                @Html.DisplayFor(model => model.Product_bid_price, new { @class = "" }) <br />

                            }
                            else
                            {
                                @Html.Label("Current Highest Bid") <br />

                                @Html.DisplayFor(model => model.CurrentHighestBid, new { @class = "" }) <br />
                            }



                        </td>

                    </tr>
                </table>

                <div>
                    <label style="color: black; font-size: large"> Bid Price: </label>
                    @Html.TextBox("Bid_price",  Bid_price ) <br />
                   
                </div> 
                <br />

                <input type="submit" value="Submit" style="color:white; background-color:cornflowerblue; font-size: large" />
            }



        }

        else
        {
            <table>
                <tr>
                    <td> There is no Product </td>
                </tr>
            </table>
        }


    </div>
</body>




