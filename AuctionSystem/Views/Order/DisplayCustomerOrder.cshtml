@model Auction.Model.Message.Order

    @{
        ViewBag.Title = "Customer Order";
    }

    <body style="background-color:white; ">

        <div style="
        display:inline;
        position: absolute;
        top: 100px;
        left: 50px;
        width: auto;
        height: auto;
        margin: auto;">

            <h2 style="font-size: x-large; font: bold; color: forestgreen"> Orders </h2> <br />

            @if (Model != null)
            {

                <table>

                    <tr style="color:black">
                        <td style="font-size: large">

                            @Html.Label("Order Number :")
                            @Html.DisplayFor(m => m.OrderId) <br />

                            @Html.Label("Product:")
                            @Html.DisplayFor(m => m.ProductName)

                            <br />
                            @Html.Label("Order Amount:")
                            @Html.DisplayFor(m => m.OrderAmount) <br />

                            @Html.Label("Order Date:")
                            @Html.DisplayFor(m => m.OrderDatetime)
                        </td>
                    </tr>
                </table>

            }

            else
            {
                <table>
                    <tr>
                        <td style="font-size: large"> There are no Orders </td>
                    </tr>
                </table>
            }

        </div>
    </body>

