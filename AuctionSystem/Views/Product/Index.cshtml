@model Auction.Model.Message.ProductTypesResponse

@{
    ViewBag.Title = "Index";
}



<body style="background-color: white">

    @*<img src="C:\Users\jagad\OneDrive\Documents\Visual Studio 2017\Projects\AuctionSystemWebApi\AuctionSystemWebApi\Scripts\Auction-gavel-1.jpg" style='width:100%; height: 100%; background-position: center; background-attachment: fixed; background-size: cover; background-repeat: no-repeat' alt='[]' />*@
    <div style="
        display:inherit;
        position: absolute;
        top: 100px;
        left: 50px;
        width: auto;
        height: auto;
        margin: auto;">
       
        <h2 style="font-size: x-large; color: forestgreen"> Auction Categories </h2> 
        <br />

            <table>
               
                @if (Model.Products.Count != 0)
                {
                    for (int i = 0; i < Model.Products.Count; i++)
                    {
                        var Name = Model.Products[i].Product_type;
                        <tr style="color:black">
                            <td style="font-size:large"> @Html.ActionLink(Name, "GetProducts", "Product", new { productTypeId = Model.Products[i].ProductType_Id }, null) </td>

                        </tr>
                    }
                }

                else {
                    <tr>
                        <td> There are no Categories </td>
                    </tr>
                }
               
            </table>
           





    </div>
</body>