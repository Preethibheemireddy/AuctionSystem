@model Auction.Model.Message.ProductResponse
@{
    ViewBag.Title = "Products";
}


<body style="background-color: white; ">

    <div style="
        display:inline;
        position: absolute;
        top: 100px;
        left: 50px;
        width: auto;
        height: auto;
        margin: auto;">

        <h2 style="font-size: x-large; font: bold; color: forestgreen"> Auctions Available </h2> <br />

        @if (Model.Products.Count != 0)
        {

            for (int i = 0; i < Model.Products.Count; i++)
            {
                var Name = Model.Products[i].ProductName;
                <table>
                    <tr style="color:black">
                        <td style="font-size: large">
                            @Html.ActionLink(Name, "GetProductWithProductid", "Product", new { productid = Model.Products[i].ProductId }, null)

                            <br />  @Html.Label("End Date:")
                            @Html.DisplayFor(model => model.Products[i].ProductBidTime, new { @class = "" })

                        </td>
                    </tr>
                </table>
                    <hr />
            }
        }

        else
        {
            <table>
                <tr>
                    <td style="font-size: large"> There are no Auctions </td>
                </tr>
            </table>
        }








    </div>
</body>